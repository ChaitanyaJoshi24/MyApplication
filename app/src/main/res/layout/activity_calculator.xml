<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_boxone"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:digits="0123456789."
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edt_boxtwo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/edt_boxone"
        android:digits="0123456789."
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_boxone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btn_addition"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_result"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="+"
        android:background="@drawable/addition"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_subtraction"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_result"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btn_addition"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_multiplication"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_addition"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_division"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_addition"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btn_multiplication"
        android:text="/"
        android:textSize="20sp" />

</RelativeLayout>